{
  "name": "Bandcamp+",
  "short_name": "bandcamp-plus",
  "description": "Add multiple features to bandcamp.com",
  "version": "1.5.11",
  "manifest_version": 2,
  "icons": {
    "108": "assets/bandcamp-plus-icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bandcamp.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
